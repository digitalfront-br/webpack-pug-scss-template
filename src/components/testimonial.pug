      each item in passos
        li
          .uk-card.uk-margin.uk-flex.uk-flex-middle
            div.uk-responsive-width
              img(src=item.img alt='' class="uk-responsive-width")
            div.uk-width-1-2
              .uk-card-body
                h3.uk-text-secondary
                  img(src='src/img/aspas.svg' alt='')
                p.uk-text-primary=item.text
                div
                  h4.uk-text-bold.uk-text-primary.uk-margin-remove=item.name
                  span.uk-text-secondary Médico
            
    
